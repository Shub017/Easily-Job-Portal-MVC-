<!-- applicantDetails.ejs -->
<div class="modal-body" style="background-color: #F8D7DA; padding: 20px;">
    <h5 class="mb-4 text-danger" style="font-style: italic;">Applicants </h5>
    <ul class="list-group">
        <% applicants.forEach(applicant => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong><%= applicant.name %></strong>
                    <p class="mb-1"><%= applicant.email %> - <%= applicant.contact %></p>
                    <a href="/CVs/<%= applicant.filename %>" class="btn btn-outline-primary" target="_blank">View Resume</a>
                </div>
            </li>
        <% }) %>
    </ul>
</div>
