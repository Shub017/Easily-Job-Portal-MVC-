<form id="createJob" action="/updateJob" method="post">
    <div class="display-1 text-light fst-italic">update Job</div>
    <div class="form-row">

        <div class="form-group col-md-6">
            <label for="companyName" class="bg-primary text-light display-5">Company name</label>
            <input type="text" class="form-control" id="companyName" placeholder="Company name" name="companyName">
        </div>

        <div class="form-group col-md-6">
            <label for="jobDesignation" class="bg-success text-light display-5">Email</label>
            <input type="email" class="form-control" id="jobDesignation" placeholder="Email" name="email">
        </div>

        <div class="form-group col-md-6">
            <label for="location" class="bg-warning text-light display-5">Location</label>
            <input type="text" class="form-control" id="location" placeholder="Location" name="jobLocation">
        </div>

        <div class="form-group col-md-6">
            <label for="salary" class="bg-info text-light display-5">Salary</label>
            <input type="text" class="form-control" id="salary" placeholder="Salary" name="salary">
        </div>

        <div class="form-group col-md-6">
            <label for="skills" class="bg-danger text-light display-5">Skills</label>
            <input type="text" class="form-control" id="skills" placeholder="Write using ',' only"  name="skillsRequired">
        </div>

        <div class="form-group col-md-6">
            <label for="deadline" class="bg-dark text-light display-5">Deadline to Apply</label>
            <input type="text" class="form-control" id="deadline" placeholder="Deadline to Apply" name="deadLineToApply">
        </div>

        <div class="form-group col-md-6">
            <label for="jobCategory" class="bg-danger text-light display-5">Job Category</label>
            <input type="text" class="form-control" id="deadline" placeholder="Deadline to Apply" name="jobCategory">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
